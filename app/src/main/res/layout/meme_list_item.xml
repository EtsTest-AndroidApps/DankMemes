<com.github.captain_miao.optroundcardview.OptRoundCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:optRoundCardElevation="4dp"
    android:id="@+id/meme_card"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/image">

            <!--<Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_down_arrow"
                android:id="@+id/down_arrow"/>-->

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:id="@+id/memes"
                android:layout_alignParentTop="true"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loading_into_imageview"
                android:layout_centerInParent="true"
                android:visibility="gone"
                style="?android:progressBarStyle"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memes_numbers"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_below="@+id/image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:id="@+id/memes_likes_count"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memes_dot"
                android:layout_toRightOf="@+id/memes_likes_count"
                android:layout_marginLeft="5dp"
                android:text="|"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/memes_dot"
                android:textSize="12sp"
                android:id="@+id/memes_comments_count"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider"
            android:visibility="gone"
            android:background="@color/dividerColor"
            android:layout_below="@+id/memes_numbers" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/divider"
            android:id="@+id/card_options">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/button_items"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/memes_list_more_options">

                <LinearLayout
                    android:id="@+id/memes_list_like_post"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/memes_list_like_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:tint="@color/secondaryText"
                        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                    <TextView
                        android:id="@+id/memes_list_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/like_post" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/memes_list_comment_post"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/comment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:tint="@color/secondaryText"
                        app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp" />

                    <TextView
                        android:id="@+id/comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/comment_post" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/memes_list_fave_post"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/memes_list_fave_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:tint="@color/secondaryText"
                        app:srcCompat="@drawable/ic_star_border_black_24dp" />

                    <TextView
                        android:id="@+id/memes_list_fave_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/fave_item" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:id="@+id/memes_list_more_options"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_more_vert"/>

        </RelativeLayout>

    </RelativeLayout>

</com.github.captain_miao.optroundcardview.OptRoundCardView>

